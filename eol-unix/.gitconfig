[user]
    name  = Erik Johnson
    email = ej@ucar.edu

[push]
    # upstream - push the current branch to its upstream branch.
    # default = upstream
    default = tracking # for old git

[core]
    # set git diff to wrap lines
    # http://durdn.com/blog/2012/12/05/git-12-curated-git-tips-and-workflows/
    pager = less -r

    editor = emacs

[color]
    ui = auto

[alias]
    ss = status
    # s  = status -sb # not in git 1.7.1
    s  = status -s
    cl = config --list
    a  = add
    ci = commit
    co = checkout
    d  = diff
    ds = diff --cached # diff staged changes
    p  = push
    b  = branch
    m  = merge --no-ff
    ll = log --graph --numstat --abbrev-commit
    l  = log --graph --numstat --decorate --pretty=oneline --abbrev-commit
    lp = log -p
    ba = branch -a -vv # list all branches
    today = log -p --since '1 day ago' # show committed changes from last 24h

    unstage = reset HEAD
    u       = reset HEAD
