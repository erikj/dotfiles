#!/bin/sh

# script to initialize and open markdown file named via input:
# touchdown "Some Input"
# File: some-input.md
# Content: # Some Input

# filename assigned from lowercased input:
filename=`echo $1 | sed -E 's/ /-/g' | tr '[:upper:]' '[:lower:]'`.md

if [ ! -f $filename ]; then
  echo \# $1  >> $filename
  echo created $filename
fi

open $filename
